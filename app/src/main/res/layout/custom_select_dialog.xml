<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="28dp"
              android:paddingRight="28dp">

    <LinearLayout
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_easy"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:gravity="center"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:background="#af4eba6f"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:text="난이도"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/setting_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:paddingBottom="5dp"
                    android:text="Easy"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/setting_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    android:text="Normal"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/setting_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:paddingBottom="5dp"
                    android:text="Hard"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/setting_hell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:paddingBottom="5dp"
                    android:text="Hell"
                    android:textSize="20dp"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_left"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/select_easy_setting_btn"
                android:layout_weight="1"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/bt_right"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/select_easy_setting_btn"
                android:layout_weight="1"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>